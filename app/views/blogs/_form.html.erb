<script src="//tinymce.cachefly.net/4.0/tinymce.min.js"></script>
<script type="text/javascript">
  tinymce.init({
    selector: "textarea",
    theme: "modern",
    plugins: [
      'advlist autolink link image lists charmap print preview fullscreen media',
      'table autosave textcolor wordcount code searchreplace insertdatetime preview'        
    ],
    toolbar: "searchreplace insertdatetime preview",
    insertdatetime_formats: ["%Y.%m.%d", "%H:%M"]
  });
</script>

<%= form_for(@blog) do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :resource_type %><br>
    <%= f.select :resource_type, ResourceType.all.map { |t| t.name }, 
                                 prompt: "Select a type" %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <!-- <%= f.text_area :content %> -->
    <%= f.text_area :content, :class => "tinymce", :rows => 20, :cols => 80, 
      :id => "blog-content" %>
    
  </div>
  <div class="field">
    <%= f.label :blog_type %><br>
    <%= f.select :blog_type, BlogType.all.map { |t| t.name }, 
                                 prompt: "Select a type" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
